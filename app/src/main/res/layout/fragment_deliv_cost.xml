<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/product_selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <ListView
            android:id="@+id/listProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">
            <TextView
                android:id="@+id/textSubTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginRight="12dp"
                android:text="Subtotal"
                android:textSize="15dip"
                android:typeface="sans" />
            <TextView
                android:id="@+id/holderSubTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="12dp"
                android:text="Rp. Subtotal"
                android:textSize="15dip"
                android:typeface="sans" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">
            <TextView
                android:id="@+id/textDelivCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginRight="12dp"
                android:text="Biaya Pengiriman"
                android:textSize="15dip"
                android:typeface="sans" />
            <TextView
                android:id="@+id/holderDelivCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="12dp"
                android:text="Rp. DelivCOst"
                android:textSize="15dip"
                android:typeface="sans" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginRight="12dp"
                android:text="Total"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="sans" />
            <TextView
                android:id="@+id/holderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="12dp"
                android:text="Rp. Total"
                android:textStyle="bold"
                android:textSize="15dip"
                android:typeface="sans" />
        </FrameLayout>
        <!-- Confirm Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_payment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="PROSES PEMBAYARAN"
            android:textAlignment="gravity"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>