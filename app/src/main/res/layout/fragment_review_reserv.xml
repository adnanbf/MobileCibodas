<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Linear Total -->
        <LinearLayout
            android:id="@+id/linearTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/product_selector"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Total"
                android:textColor="@color/oil"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="sans" />


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textTotalItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="12dp"
                    android:text="Total Item"
                    android:textColor="@color/oil"
                    android:textSize="15dip"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="12dp"
                    android:text="Total Price"
                    android:textColor="@color/oil"
                    android:textSize="15dip"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </FrameLayout>
        </LinearLayout>

        <!-- Linear Address -->
        <LinearLayout
            android:id="@+id/linearAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/product_selector"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Alamat Pengiriman"
                android:textColor="@color/primary"
                android:textSize="15dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textCustName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Nama Pengirim"
                android:textColor="@color/oil"
                android:textSize="13dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Alamat"
                android:textColor="@color/oil"
                android:textSize="12dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textZipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Zip Code"
                android:textColor="@color/oil"
                android:textSize="12dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Email"
                android:textColor="@color/oil"
                android:textSize="12dip"
                android:typeface="sans" />

        </LinearLayout>

        <!-- Linear Product -->
        <LinearLayout
            android:id="@+id/linearProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/product_selector"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Item"
                android:textColor="@color/oil"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <ListView
                android:id="@+id/listCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:listSelector="@drawable/cart_row_selector"></ListView>

            <Button
                android:id="@+id/buttonConfirmResevation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="@string/btn_confirm_reservation" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>